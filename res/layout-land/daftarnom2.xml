                        android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/nom_icon_legend"
	                    android:layout_marginRight="5dp"/>
                    </TableRow>
                    
	                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >  
